<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tokki.MainPage">

    <RelativeLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Grid HorizontalOptions="FillAndExpand">
            <Image x:Name="Image_background" HorizontalOptions="Center" VerticalOptions="Center"/>

            <Grid x:Name ="Stack_main_menu" IsVisible="true"  HorizontalOptions="Center" VerticalOptions="Center">
                <StackLayout>


                    <Label Text="Menu" HorizontalOptions="Center" VerticalOptions="Start"  FontSize="30" TextColor="Black"/>
                    <Button Text="Breath" TextColor="Black" x:Name="Breath" Clicked="game_breath_Click" HeightRequest="60" WidthRequest="200" CornerRadius="10"  BackgroundColor="#B3E8FF"/>
                    <Button Text="Couple"  TextColor="Black" x:Name="Couple" Clicked="game_couple_Click" HeightRequest="60" WidthRequest="200" CornerRadius="10" BackgroundColor="#B3E8FF"/>
                    <Button Text="Hue" TextColor="Black" x:Name="Hue" Clicked="game_hue_Click" HeightRequest="60" WidthRequest="200" CornerRadius="10" BackgroundColor="#B3E8FF"/>
                </StackLayout>

            </Grid>
        </Grid>
    </RelativeLayout>

</ContentPage>
